---
	import MainLayout from "../layouts/MainLayout.astro";
	import "../style/colours.css"

---

<MainLayout pageTitle="Guillaume Julien - Home">
	<section id="welcome-section">
		<h1 id="name">Guillaume Julien</h1>
		<p id="profession">Software Engineer</p>
	</section>
</MainLayout>

<style>
	#welcome-section {
		background-color: #303841;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		width: 100%;
		height: calc(100vh - 3rem);
		margin: 0px;
		padding: 0;
		font-family: sans-serif;
	}

	#name {
		color: #eee;
		font-size: 50px;
		text-align: center;
	}

	#profession {
		font-size: 25px;
		font-style: italic;
		color: #5bbf79;
	}
</style>